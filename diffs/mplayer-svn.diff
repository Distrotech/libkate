+static void flush_page(FILE *f,ogg_stream_state *os)
+{
+  ogg_page og;
+  while (1) {
+    int ret=ogg_stream_flush(os,&og);
+    if (ret==0) break;
+    fwrite(og.header,1,og.header_len,f);
